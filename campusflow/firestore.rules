rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own profile document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only access their own data
    match /assignments/{assignmentId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.studentId == request.auth.uid);
    }
    
    match /exams/{examId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.studentId == request.auth.uid);
    }
    
    match /subjects/{subjectId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.studentId == request.auth.uid);
    }
    
    match /studyFiles/{fileId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.studentId == request.auth.uid);
    }
    
    match /studyFolders/{folderId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.studentId == request.auth.uid);
    }
    
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        (resource == null || resource.data.studentId == request.auth.uid);
    }
    
    // Allow users to create new documents with their own ID
    match /{document=**} {
      allow create: if request.auth != null && 
        request.resource.data.studentId == request.auth.uid;
    }
  }
}
